  fx:controller="edu.ntnu.idatt1002.controllers.ListOfAllExpensesController">
  <children>
    <Rectangle height="600.0" smooth="false" stroke="#ffcaca" strokeType="INSIDE" strokeWidth="0.0"
      width="800.0">
      <fill>
        <LinearGradient endX="0.7964015440507367" endY="0.6922348484848484"
          startX="0.7850379149119059" startY="1.0">
          <stops>
            <Stop>
              <color>
                <Color red="0.9647058844566345" green="0.6313725709915161"
                  blue="0.572549045085907"/>
              </color>
            </Stop>
            <Stop offset="1.0">
              <color>
                <Color red="0.9490196108818054" green="0.8352941274642944"
                  blue="0.5686274766921997"/>
              </color>
            </Stop>
          </stops>
        </LinearGradient>
      </fill>
    </Rectangle>
    <Label alignment="TOP_CENTER" layoutX="329.0" layoutY="34.0" text="All Expenses">
      <font>
        <Font size="30.0"/>
      </font>
    </Label>
    <TableView fx:id="expenseTableView" layoutX="14.0" layoutY="124.0" maxHeight="-Infinity"
      maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="450.0"
      prefWidth="650.0">
      <columns>
        <TableColumn fx:id="amountTableColumn" prefWidth="162.5" resizable="false" text="Amount"/>
        <TableColumn fx:id="productTableColumn" prefWidth="162.5" resizable="false" text="Product"/>
        <TableColumn fx:id="supplierTableColumn" prefWidth="162.5" resizable="false"
          text="Supplier"/>
        <TableColumn fx:id="dateTableColumn" prefWidth="162.5" resizable="false" text="Date"/>
      </columns>
      <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
      </columnResizePolicy>
    </TableView>
    <Button alignment="CENTER" layoutX="40.0" layoutY="35.0" mnemonicParsing="false"
      onMouseClicked="#switchToMainMenuScene" prefHeight="43.0" prefWidth="110.0"
      style="-fx-background-color: #76b5c5; -fx-border-width: 2; -fx-border-color: #000000;"
      text="Return" underline="true">
      <font>
        <Font name="Verdana" size="20.0"/>
      </font>
    </Button>
    <Button fx:id="editButton" alignment="CENTER" layoutX="680.0" layoutY="149.0"
      mnemonicParsing="false" onMouseClicked="#switchToEditExpenseScene" prefHeight="43.0"
      prefWidth="110.0"
      style="-fx-background-color: #76b5c5; -fx-border-width: 2; -fx-border-color: #000000;"
      text="Edit" underline="true">
      <font>
        <Font name="Verdana" size="20.0"/>
      </font>
    </Button>
    <Button fx:id="deleteButton" alignment="CENTER" layoutX="680.0" layoutY="211.0"
      mnemonicParsing="false" onMouseClicked="#deleteButtonClicked" prefHeight="43.0"
      prefWidth="110.0"
      style="-fx-background-color: ff0000; -fx-border-width: 2; -fx-border-color: #000000;"
      text="Delete" textFill="WHITE" underline="true">
      <font>
        <Font name="Verdana" size="20.0"/>
      </font>
    </Button>
    <Pane fx:id="informationPane" layoutX="503.0" layoutY="20.0" prefHeight="73.0" prefWidth="64.0">
      <children>
        <ImageView fitHeight="43.0" fitWidth="40.0" layoutX="14.0" layoutY="14.0"
          pickOnBounds="true" preserveRatio="true">
          <image>
            <Image url="@../Icons/icon_information.png"/>
          </image>
        </ImageView>
      </children>
    </Pane>
